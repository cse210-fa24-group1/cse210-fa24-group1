{
  "source": {
    "include": ["src", "__tests__"],
    "includePattern": ".+\\.(js)$",
    "excludePattern": "(node_modules/|docs|.+\\.(html)$)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "destination": "./docs/",
    "recurse": true,
    "readme": "./README.md"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "tags": {
    "allowUnknownTags": true
  }
}
